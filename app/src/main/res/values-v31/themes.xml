<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.OnTime" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/transparent_drawable</item>
        <item name="android:windowSplashScreenAnimationDuration">0</item>
    </style>

    <style name="Theme.OnTime.Splash" parent="Theme.OnTime">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>